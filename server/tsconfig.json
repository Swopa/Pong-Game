{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDirs": ["./src", "../shared"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".", 
    "paths": {
      "@shared/*": ["../shared/*"] 
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}